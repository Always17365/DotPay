@model  IEnumerable<DotPay.ViewModel.OrderListModel>
@using FC.Framework

<input type="hidden" id="firstSellPrice" value="@(Model.Count()>0? Model.First().Price:"0")" />
<table class="table" id="sellTable">
    <colgroup>
        <col width="23%" />
        <col width="23%" />
        <col width="23%" />
        <col />
    </colgroup>
    <tbody>
        @if (Model.Count() > 0)
        {
            foreach (var order in Model)
            {
                <tr class="clickableOrder" id="sell-@order.Price" price="@order.Price" onclick='askorder_clk(event)'>
                    <td class="price" id="sellPrice-0-@order.Price">@order.Price</td>
                    <td class="amount" id="sellAmount-0-@order.Price">@order.Volume</td>
                    <td id="sellTotal-0-@order.Price">@order.Amount</td>
                    <td>
                        <div class="progress">
                            <div class="progress-bar sellVolume" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: @order.VolumePercent;">
                            </div>
                        </div>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>