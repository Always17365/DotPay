@using FC.Framework
@model  IEnumerable<DotPay.ViewModel.OrderListModel>

<input type="hidden" id="firstBuyPrice" value="@(Model.Count() > 0 ? Model.First().Price : "0")" />
<table class="table" id="buyTable">
    <colgroup>
        <col width="23%" />
        <col width="23%" />
        <col width="23%" />
        <col />
    </colgroup>
    <tbody>
        @if (Model.Count() > 0)
        {
            foreach (var order in Model)
            {
                <tr class="clickableOrder" id="buy-@order.Price" price="@order.Price" onclick='bidorder_clk(event)'>
                    <td class="price" id="buyPrice-0-@order.Price">@order.Price</td>
                    <td class="amount" id="buyAmount-0-@order.Price">@order.Volume</td>
                    <td id="buyTotal-0-@order.Price">@order.Amount</td>
                    <td>
                        <div class="progress">
                            <div class="progress-bar buyVolume" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: @order.VolumePercent;"></div>
                        </div>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>