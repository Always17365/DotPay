@model  IEnumerable<DotPay.ViewModel.TradeListFrontModel>
@using FC.Framework
@using DotPay.Common
@using DotPay.Language
<colgroup>
    <col width="15%" />
    <col width="15%" />
    <col width="15%" />
    <col width="15%" />
    <col width="15%" />
    <col />
</colgroup>

@foreach (var order in Model)
{
    <tr>
        <td>@order.CreateAt.ToLocalDateTime().ToString("MM-dd HH:mm:ss")</td>
        <td><span class="@(order.Type == OrderType.Ask ? "sell" : "buy")">@(order.Type == OrderType.Ask ? Html.Lang("AskOrder") : Html.Lang("BidOrder"))</span></td>
        <td>@order.Price</td>
        <td>@order.Volume</td>
        <td>@order.Amount</td>
        <td>
            <div class="progress">
                <div class="progress-bar @(order.Type == OrderType.Ask ? "sellVolume" : "buyVolume")" role="progressbar" aria-valuenow="60" aria-valuemin="1" aria-valuemax="100" style="width: @order.VolumePercent;"></div>
            </div>
        </td>
    </tr>

}