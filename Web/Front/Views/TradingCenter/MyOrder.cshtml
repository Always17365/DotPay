@{
    Layout = null;
}
@model  IEnumerable<DotPay.ViewModel.OrderListModel>
@using FC.Framework
@using DotPay.Common;
@using DotPay.Language;
<table class="table">
    <colgroup>
        <col width="16%" />
        <col width="16%" />
        <col width="16%" />
        <col width="16%" />
        <col width="16%" />
        <col />
    </colgroup>
    @foreach (var order in Model)
    {
        <tr>
            <td>
                @order.CreateAt.ToLocalDateTime().ToString("MM-dd HH:mm:ss")
            </td>
            <td style='color:@(order.Type == OrderType.Ask ? "#bd432c" : "#2ea728")'>
                @Html.Lang(order.Type.GetDescription())
            </td>
            <td>
                @order.Volume
            </td>
            <td>
                @order.Price
            </td>
            <td>
                @order.Amount
            </td>
            <td>
                <a href="###" data_id="@order.ID" onclick="cancelOrder(event)">@Html.Lang("Cancel_Order")</a>
            </td>
        </tr>
    }
</table>