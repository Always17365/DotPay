@{
    Layout = "~/Views/Shared/_Layout_Profile.cshtml";
}
@using DotPay.Language
<nav class="navbar navbar-default dotpay-navbar-profile" role="navigation">
    <div class="container">
        <div class="navbar-header">
            <a class="navbar-brand" href="/my/index/">
                <img alt="Brand" style="height:40px;width:80px;" src="~/public/images/logo.png">
            </a>
        </div>
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav navbar-right">
                <li><a href="/my/index/"> 我的资金</a></li>
                <li><a href="/my/txrecords">交易记录</a></li>
                <li class="active"><a href="/my/profile">账户设置</a></li>
                <li><a href="/transfer/cny/payment">应用中心</a></li>
            </ul>
        </div>
    </div>
</nav>
<div id="main" class="container">
    <style>
        #login-form .form-control-feedback { top: 25px; right: 0px; }
    </style>
    <div class="row row-6">
        @if (ViewBag.Result.Code == 1)
        {
            <div class="col-sm-10 col-md-10 col-lg-8 col-md-offset-1 col-lg-offset-2 ptl-3">
                <div class="panel panel-info">
                    <div class="panel-heading"><h2>重置支付密码</h2></div>
                    <div class="fail box" id="failBox" style="display:none;">
                        <img src="~/public/images/error.png" alt="Error!" class="left 2x" width="24"><span id="spanFailBox"></span>
                    </div>
                    <div class="success box" id="sucessBox" style="@(!string.IsNullOrEmpty( ViewBag.ResetSuccess)?"": "display:none;")">
                        <img src="~/public/images/success.png" alt="Success!" class="left 2x" width="32"><strong>@Html.Lang("msg_box_success")!</strong><br><span id="spanSuccessBox">@ViewBag.ResetSuccess</span>
                    </div>
                    <form id="reset-form" class="form-horizontal  ptl-3">
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <label class="col-sm-3 text-right" for="login_email">帐号：</label>
                            <div class="col-lg-6 col-sm-8 controls">
                                <label class=" desc" for="login_email">@ViewBag.CurrentUser.LoginName</label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-3" for="pay_password">新支付密码：</label>
                            <div class="col-lg-6 col-sm-8 controls">
                                <input class="form-control" id="pay_password" type="password" name="paypassword">
                            </div>
                        </div><div class="form-group">
                            <label class="control-label col-sm-3" for="confirm_password">确认新支付密码：</label>
                            <div class="col-lg-6 col-sm-8 controls">
                                <input class="form-control" id="confirm_password" type="password" name="confirmpassword">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-3" for="smscode">短信验证码：</label>
                            <div class="col-lg-6 col-sm-8 controls">
                                <input class="form-control" id="smscode" type="text" name="sms_Otp">
                                <a id="btnSendSMSForResetPayPassword" class="app-link">@Html.Lang("Click here to get SMS Authentication Code")</a><br>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-6 col-md-4 col-lg-3 col-sm-offset-2 controls">
                                <input type="submit" class="btn btn-primary btn-large btn-block" value="确定">
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        }
        else
        {
            <h1>@ViewBag.Result.Message</h1>
        }
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {

        $("#btnSendSMSForResetPayPassword").click(function () {
            var btn = $(this);
            sendsms(btn, smsUseFor.ResetTradePwd);
        });

        $('#reset-form').bootstrapValidator({
            message: '请输入合法的值',
            feedbackIcons: {
                valid: 'glyphicon glyphicon-ok',
                invalid: 'glyphicon glyphicon-remove',
                validating: 'glyphicon glyphicon-refresh'
            },
            trigger: 'cut paste blur',
            fields: {
                paypassword: {
                    validators: {
                        notEmpty: { message: '请输入新的支付密码' }
                    }
                },
                confirmpassword: {
                    validators: {
                        notEmpty: { message: '请再次输入支付密码' },
                        identical: { field: 'paypassword', message: '两次输入密码不一致' },
                    }
                },
                sms_Otp: {
                    validators: {
                        notEmpty: { message: '请输入手机验证码' }
                    }
                }
            }
        }).on('success.form.bv', function (e) {
            e.preventDefault();
            var $form = $(e.target);

            $.ajax({
                type: 'POST',
                url: '/resetPayPwdByMobile',
                data: $(this).serialize(),
                success: function (data) {
                    commonFormCallback(data);
                }
            });
        }).on('error.validator.bv', function (e, data) {
            data.element
                .data('bv.messages')
                .find('.help-block[data-bv-for="' + data.field + '"]').hide()
                .filter('[data-bv-validator="' + data.validator + '"]').show();
        });

    });
</script>
