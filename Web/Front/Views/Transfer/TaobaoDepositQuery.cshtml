    <!--[if IE 7]>
    <link rel="stylesheet" href="~/public/css/font-awesome-ie7.min.css">
    <![endif]-->
    <link href="~/public/css/layout.css" rel="stylesheet" />
    <script src="~/public/libs/jquery/jquery.min.js"></script>
    <script src="~/public/libs/jquery/jquery.cookie.js"></script>
    <script src="~/public/js/main.js"></script>
</head>
<body style="padding-bottom: 70px;">
    <header class="navbar navbar-static-top navbar-default  dotpay-navbar-profile-top" id="top" role="banner">
        <div class="container">
            <div class="navbar-header">
                <button class="navbar-toggle collapsed" type="button" data-toggle="collapse" data-target=".dotpay-navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <nav class="collapse navbar-collapse" role="navigation">
                <ul class="nav navbar-nav">
                    <li><a><i class="welcome">@Html.Lang("Dotpay,your fast payment expert")</i></a></li>
                </ul>
                @*<ul class="nav navbar-nav  navbar-right">
                        <li><a href="###" onclick="switchLang('zh-CN')">中文</a> </li>
                        <li><a href="###" onclick="switchLang('en-US')">English</a></li>
                    </ul>*@
            </nav>
        </div>
    </header>
    <nav class="navbar navbar-default dotpay-navbar-profile" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">
                    <img alt="Brand" style="height: 40px; width: 80px; display: inline" src="~/public/images/logo.png">
                </a>
            </div>
            <nav class="collapse navbar-collapse" role="navigation">
                <ul class="nav navbar-nav  ">
                    <li><a href="/deposit">充值查询</a></li>
                    <li><a href="/query">@Html.Lang("Direct transfer progress query")</a></li>
                </ul>
            </nav>
        </div>
    </nav>
    <div class="container">
        <div class="com-sm-12 col-md-10  col-md-offset-1 col-sm-offset-0">
            <div class="alert alert-info">
                <a href="https://bikeee.taobao.com" class="btn btn-large btn-success">点击进入淘宝充值</a>
                <a target="_blank" class="btn btn-large btn-primary" href="https://rippletrade.com/#/trust?to=rM8199qFwspxiWNZRChZdZbGN5WrCepVP1&currency=CNY&name=dotpayco&amount=1000000000%2FCNY" class="label label-info badge">点击信任网关</a>
                <ul class="list-group" style="margin-top: 30px;">
                    <li class="list-group-item" style="padding: 5px 15px;">
                        留言错误 <label class="label label-info badge">请申请退款</label>
                    </li>
                    <li class="list-group-item" style="padding: 5px 15px;">
                        有未确认收货订单
                        <label class="label label-info badge">淘宝确认订单</label>
                    </li>
                    <li class="list-group-item" style="padding: 5px 15px;">
                        钱包未激活 <label class="label label-info badge">请先激活钱包</label>
                    </li>
                    <li class="list-group-item" style="padding: 5px 15px;">
                        未信任网关或信任额度不足<a target="_blank" href="https://rippletrade.com/#/trust?to=rM8199qFwspxiWNZRChZdZbGN5WrCepVP1&currency=CNY&name=dotpayco&amount=1000000000%2FCNY" class="label label-info badge">点击信任网关</a>
                    </li>
                    <li class="list-group-item" style="padding: 5px 15px;">
                        10分钟未到账
                        <a target="_blank" href="http://shang.qq.com/wpa/qunwpa?idkey=8f8ed58718c5e89097afb76b6131994f4ba3ab680c454d64c21b080968f38bfe" class="label label-info badge">联系管理员</a>
                    </li>
                </ul>
            </div>
            <div class="panel panel-info">
                <div class="panel-heading">
                    <h4 class="panel-title">最近的充值</h4>
                </div>
                <div class="panel-body" style="padding:0px;color:#555;font-size:12px;">
                    <table class="table table-striped table-responsive">
                        <tr>
                            <th>买家</th>
                            <th>淘宝交易号</th>
                            <th>是否留言</th>
                            <th>付款时间</th>
                            <th>金额</th>
                            <th>状态</th>
                            <th>提示</th>
                        </tr>
                        @foreach (var tx in (IEnumerable<TaobaoRippleDeposit>)ViewBag.RecentlyTransaction)
                        {
                            //var account_pre = account_is_email_style ? tx.Account.Split('@')[0] : tx.Account;
                            //var account_last = account_is_email_style ? "@" + tx.Account.Split('@')[1] : string.Empty;
                            var sub_account_length = Math.Min(tx.buyer_nick.Length, 4);
                            //var padright = Math.Max(account_pre.Length - sub_account_length, 1);
                            //var account_to_show = account_pre.Substring(0, sub_account_length).PadRight(padright, '*') + account_last;

                            var padleft = Math.Min(tx.buyer_nick.Length - sub_account_length, 3);
                            var account_to_show = tx.buyer_nick.Substring(tx.buyer_nick.Length - 2).PadLeft(tx.buyer_nick.Length, '*');
                            <tr>
                                <td><label class='label label-success'>@account_to_show</label></td>
                                <td>@(tx.Tid) </td>
                                <td>@(MvcHtmlString.Create(tx.has_buyer_message ? "<label class='label label-success'>有留言</label>" : "<label class='label label-danger'>未留言</label>"))</td>
                                <td>@tx.pay_time.ToString("MM-dd HH:mm")</td>
                                <td>@(tx.amount>=2000?"≥￥2000":tx.amount>=1000?"≥￥1000":tx.amount.ToString("C"))</td>
                                <td>
                                    @(MvcHtmlString.Create(tx.taobao_status == "WAIT_SELLER_SEND_GOODS" ? "<label class='label label-info'>已付款</label>"
                                    : tx.taobao_status == "WAIT_BUYER_CONFIRM_GOODS" ? "<label class='label label-danger'>等待确认收货</label>"
                                    : tx.taobao_status == "TRADE_FINISHED" ? "<label class='label label-success'>充值成功</label>"
                                    : (tx.taobao_status == "TRADE_CLOSED" || tx.taobao_status == "TRADE_CLOSED_BY_TAOBAO") ? "<label class='label label-default'>交易关闭</label>" : ""))
                                </td>
                                <td>@(MvcHtmlString.Create(!string.IsNullOrEmpty(tx.memo) ? "<label class='label label-danger'>" + tx.memo + "</label>" : ""))</td>
                            </tr>
                        }
                    </table>
                </div>
            </div>

            <div class="panel">
                @*<div class="panel-body col-sm-3" style="padding:0px;color:#555;font-size:12px;">
                        <a target="_blank" href="http://wpa.qq.com/msgrd?v=3&uin=1161158822&site=qq&menu=yes">
                            <div class="btn btn-large btn-default">
                                <img src="~/public/images/qq.png" /><span>@Html.Lang("Contact us via QQ")</span>
                            </div>
                        </a>
                    </div>*@
                <div class="panel-body col-sm-4" style="padding:0px;color:#555;font-size:12px;">
                    <a target="_blank" href="http://shang.qq.com/wpa/qunwpa?idkey=8f8ed58718c5e89097afb76b6131994f4ba3ab680c454d64c21b080968f38bfe">
                        <div class="btn btn-large btn-default" style="text-align:left">
                            <img src="~/public/images/group.png" title="385108034" alt="385108034" />
                            <div style="display:inline-block; vertical-align:middle">
                                <span>@Html.Lang("Join QQ group Title")</span><br>
                                <span>@Html.Lang("Join QQ group")</span>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="panel-body col-sm-4 " style="padding:0px;color:#555;font-size:12px;">
                    <a target="_blank" href="mailto:support@dotpay.co">
                        <div class="btn btn-large btn-default" style="text-align:left">
                            <img src="~/public/images/email.png" style="height: 60px;" />
                            <div style="display:inline-block;vertical-align:middle;">
                                <span>@Html.Lang("Support Email")</span><br>
                                <span>support@@dotpay.co</span>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <script>

    </script>
    <footer id="footer" class="dotpay-footer navbar-fixed-bottom">
        <div>
            <div id="copyright">
                @Html.Lang("Copyright")
            </div>
        </div>
    </footer>
</body>
</html>
