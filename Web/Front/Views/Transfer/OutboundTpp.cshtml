@{
    Layout = "~/Views/Shared/_Layout_Profile.cshtml";
}
@using FC.Framework;
@using DotPay.ViewModel
@using DotPay.Common
@using DotPay.Language
<nav class="navbar navbar-default dotpay-navbar-profile" role="navigation">
    <div class="container">
        <div class="navbar-header">
            <a class="navbar-brand" href="/my/index/">
                <img alt="Brand" style="height:40px;width:80px;" src="~/public/images/logo.png">
            </a>
        </div>
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav navbar-right">
                <li><a href="/my/index/"> 我的资金</a></li>
                <li><a href="/my/txrecords">交易记录</a></li>
                <li><a href="/my/settings">账户设置</a></li>
                <li class="active"><a href="/apps">应用中心</a></li>
            </ul>
        </div>
    </div>
</nav>
<div class="container dotpay-apps">
    <div class="col-sm-3">
        <div class="panel panel-default">
            <div class="panel-heading app-group">
                <strong>转账</strong>

            </div>
            <div class="list-group">
                <a href="/transfer/cny/payment" class="list-group-item app-link"> 转账到点付</a>
                <a href="/transferout/ripple/payment" class="list-group-item app-link">转账到Ripple</a>
                <a href="/transfertpp/alipay/payment" class="list-group-item app-link">转账到支付宝</a>
                <a href="/transfertpp/tenpay/payment" class="list-group-item app-link">转账到财付通</a>
            </div>
        </div>
    </div>
    <div class="col-sm-8">
        <div class="panel panel-info transfe-out">
            <div class="panel-heading dotpay-transfer-title">
                @if (ViewBag.PayWay == PayWay.Alipay)
                {
                    <h4>转账到支付宝</h4>
                }
                else if (ViewBag.PayWay == PayWay.Tenpay)
                {
                    <h4>转账到财付通</h4>
                }
            </div>
            <div class="panel-body">
                <form id="transferFrom" class="form-horizontal" role="form" method="post" action="/transfertpp/@ViewBag.PayWay/payment">
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <label for="account" class="col-sm-3 col-md-3 col-lg-2  control-label">收款账户：</label>
                        <div class="col-sm-8">
                            @if (ViewBag.PayWay == PayWay.Alipay)
                            {
                                 <input type="text" class="form-control" autocomplete="off" id="account" name="account" placeholder="收款人账户 ( 邮箱/手机号 )">
                            }
                            else if (ViewBag.PayWay == PayWay.Tenpay)
                            {
                                <input type="text" class="form-control" autocomplete="off" id="account" name="account" placeholder="收款人账户 ( QQ/邮箱/手机号 )">
                            } 
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="amount" class="col-sm-3 col-md-3 col-lg-2   control-label">发送金额：</label>
                        <div class="col-sm-8" id="transfer-amount">
                            <input type="text" class="form-control" id="amount" name="amount">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="description" class="col-sm-3 col-md-3 col-lg-2 control-label">付款说明：</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="description" name="description" placeholder="转账">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-4 col-sm-4">
                            <button type="submit" class="btn btn-primary">下一步</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script>
        $(document).ready(function () {
            $('#transferFrom').bootstrapValidator({
                message: '请输入合法的值',
                feedbackIcons: {
                    valid: 'glyphicon glyphicon-ok',
                    invalid: 'glyphicon glyphicon-remove',
                    validating: 'glyphicon glyphicon-refresh'
                },
                trigger: 'blur',
                fields: {
                    account: {
                        validators: {
                            notEmpty: {
                                message: '请输入收款人!'
                            },
                            callback: {
                                callback: function (value, validator) {
                                    var payway = '@ViewBag.PayWay.ToString("D")';
                                    var ali = '@PayWay.Alipay.ToString("D")'
                                    var tenpay = '@PayWay.Tenpay.ToString("D")'
                                    var regqq = /^\d{5,10}$/
                                    var regmobile = /^1[3|5|7|8|][0-9]{9}$/;
                                    var regmail = /^(\w)+(\.\w+)*@@(\w)+((\.\w{2,3}){1,3})$/;
                                    if (payway == ali && !regmobile.test(value) && !regmail.test(value)) {
                                        return {
                                            valid: false,
                                            message: '支付宝账户应为手机号或邮箱地址'
                                        }
                                    }
                                    else if (payway == tenpay && !regqq.test(value) && !regmobile.test(value) && !regmail.test(value)) {
                                        return {
                                            valid: false,
                                            message: '财付通账户应为手机号或邮箱地址或QQ号'
                                        }
                                    }
                                    return true;
                                }
                            }
                        }
                    },
                    amount: {
                        validators: {
                            notEmpty: {
                                message: '付款金额必须为整数或小数，小数点后不超过2位。'
                            },
                            regexp: {
                                regexp: /^([1-9][\d]{0,7}|0)(\.[\d]{1,2})?$/,
                                message: '付款金额必须为整数或小数，小数点后不超过2位。'
                            },
                            callback: {
                                callback: function (value, validator) {
                                    if (parseFloat(value) < 0.01) {
                                        return {
                                            valid: false,
                                            message: '金额不能小于0.01'
                                        }
                                    }
                                    return true;
                                }
                            }
                        }
                    }
                }
            })
            .on('error.validator.bv', function (e, data) {
                data.element
                    .data('bv.messages')
                    .find('.help-block[data-bv-for="' + data.field + '"]').hide()
                    .filter('[data-bv-validator="' + data.validator + '"]').show();
            });
        });
        $("#inputEmail").on("click", function () {
            $(this).removeAttr("readonly");
            var val = $("#realEmail").val();
            if (val)
                $(this).val(val);
        });
    </script>
</div>