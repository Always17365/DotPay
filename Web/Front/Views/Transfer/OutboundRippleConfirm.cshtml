@{
    Layout = "~/Views/Shared/_Layout_Profile.cshtml";
}
@using FC.Framework;
@using DotPay.ViewModel
@using DotPay.Common
@using DotPay.Language
<nav class="navbar navbar-default dotpay-navbar-profile" role="navigation">
    <div class="container">
        <div class="navbar-header">
            <a class="navbar-brand" href="/my/index/">
                <img alt="Brand" style="height:40px;width:80px;" src="~/public/images/logo.png">
            </a>
        </div>
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav navbar-right">
                <li><a href="/my/index/"> 我的资金</a></li>
                <li><a href="/my/txrecords">交易记录</a></li>
                <li><a href="/my/settings">账户设置</a></li>
                <li class="active"><a href="/apps">应用中心</a></li>
            </ul>
        </div>
    </div>
</nav>
<div class="container dotpay-apps">
    <div class="col-sm-8 col-sm-offset-2">
        @if (@ViewBag.Transfer != null)
        {
            <div class="panel panel-info">
                <div class="panel-heading dotpay-transfer-title">
                    @if (ViewBag.PayWay == PayWay.Alipay)
                    {
                        <h4>转账到支付宝-确认</h4>
                    }
                    else if (ViewBag.PayWay == PayWay.Tenpay)
                    {
                        <h4>转账到财付通-确认</h4>
                    }
                </div>
                <div class="panel-body">
                    <h3>请确认您的转账信息</h3>
                    <hr />
                    <div class="fail box" id="failBox" style="display:none;">
                        <img src="@ViewBag.CDN/public/images/error.png" alt="Error!" class="left 2x" width="24"><span id="spanFailBox"></span>
                    </div>
                    <form id="transferFrom" class="form-horizontal" role="form" method="post">
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <label class="col-sm-3 col-md-3 col-lg-2 control-label">收款人：</label>
                            <div class="col-sm-8">
                                <label class="control-label">
                                    @ViewBag.Transfer.Destination
                                </label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 col-md-3 col-lg-2 control-label">付款金额：</label>
                            <div class="col-sm-8">
                                <label class="control-label">
                                    <input type="hidden" id="orderID" name="orderID" value="@ViewBag.Transfer.SequenceNo" />
                                    @ViewBag.Transfer.SourceAmount
                                </label>
                                <a href="#">收费标准</a>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 col-md-3 col-lg-2 control-label">付款说明：</label>
                            <div class="col-sm-8">
                                <label class="control-label">
                                    转账-@ViewBag.Transfer.Description
                                </label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="paypassword" class="col-sm-3 col-md-3 col-lg-2 control-label">支付密码：</label>
                            <div class="col-sm-8">
                                <input type="password" class="form-control" id="paypassword" name="paypassword">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-8">
                                <button type="submit" class="btn btn-primary">确认并付款</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        }
        else
        {
            <div class="fail box" id="failBox"><img src="/public/images/error.png" alt="Error!" class="left 2x" width="32"><strong>@Html.Lang("msg_box_error")!</strong><br><span id="spanFailBox">系统出错</span></div>
        }
    </div>
    <script>
        $(document).ready(function () {
            $('#transferFrom').bootstrapValidator({
                message: '请输入合法的值',
                feedbackIcons: {
                    valid: 'glyphicon glyphicon-ok',
                    invalid: 'glyphicon glyphicon-remove',
                    validating: 'glyphicon glyphicon-refresh'
                },
                trigger: 'cut paste blur',
                fields: {
                    paypassword: {
                        validators: {
                            notEmpty: { message: '请输入支付密码' }
                        }
                    }
                }
            }).on('success.form.bv', function (e) {
                e.preventDefault();
                var $form = $(e.target);

                $.ajax({
                    type: 'POST',
                    url: '/transfertpp/confirm',
                    data: $form.serialize(),
                    success: function (data) {
                        if (data.Code == 1) {
                            window.location = '/transfertpp/@ViewBag.PayWay/success?orderID=' + $("#orderID").val();
                        } else {
                            $('#spanFailBox').html(data.Message);
                            $('#failBox').show();
                        }
                    }
                });
            })
            .on('error.validator.bv', function (e, data) {
                data.element
                    .data('bv.messages')
                    .find('.help-block[data-bv-for="' + data.field + '"]').hide()
                    .filter('[data-bv-validator="' + data.validator + '"]').show();
            });
        });
        $("#inputEmail").on("click", function () {
            var val = $("#realEmail").val();
            if (val)
                $(this).val(val);
        });

    </script>
</div>