@{
    Layout = null;
}
<div class="panel panel-default">
    <div class="panel-heading">
        <h4 class="panel-title" ng-bind="title"></h4>
    </div>
    <div class="panel-body">
        <div class="pull-left">
            <button type="button" class="btn btn-success" ng-click="authorize()">授权</button>
            <button type="button" class="btn btn-success" ng-click="see()">授权额度查看</button>
        </div>
    </div>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>ID</th>  
                <th>用户ID</th>
                <th>管理角色</th>
                <th>昵称</th>
                <th>Email</th>
                <th>手机</th>
                <th>角色分配日期</th>
                <th>操作日志</th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="server in servers">
                <td><input type="checkbox" ng-model="server.Checked" ng-change="checkedChange(server)"></td>
                <td><span ng-bind="server.ID"></span></td>  
                <td><span ng-bind="server.UserID"></span></td>                  
                <td ng-bind="server.ManagerType"></td>
                <td ng-bind="server.NickName"></td>
                <td ng-bind="server.Email"></td>
                <td ng-bind="server.Mobile"></td>
                <td ng-bind="server.CreateAt*1000 | date:'yyyy-MM-dd HH:mm:ss'"></td>
                <td><a ng-href="/#/depositcodemakelog/{{server.ID}}/{{server.NickName}}">生成记录查看</a></td>
            </tr>
        </tbody>
    </table>
    <pagination total-items="totalCount" page="currentPage" first-text="首页" next-text="下一页" previous-text="上一页" last-text="尾页" max-size="10" class="pagination-sm" boundary-links="true" rotate="false" num-pages="numPages"></pagination>
</div>

<div>
    <script type="text/ng-template" id="authorizeCustomerServiceUserDepositAmount.html">
        <div class="modal-header">
            <h3>金额授权</h3>
        </div>
        <div class="modal-body">
            <form name="authorize" role="form">
                <div class="form-group">
                    <label>币种</label>
                    <select class="form-control" ng-model="currencie" ng-options="c.Code for c in currencies"></select>
                </div>
                <div class="form-group">
                    <label>授权金额</label>
                    <textarea rows="3" ng-trim="true" class="form-control" required ng-model="depositamount"></textarea>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-warning" ng-click="cancel()">取消</button>
                    <button class="btn btn-primary" ng-click="save(currencie,depositamount)">保存</button>
                </div>
            </form>
        </div>
    </script>
    <script type="text/ng-template" id="seeUserDepositAmount.html">
        <div class="modal-header">
            <h3>授权额度查看</h3>
        </div>
        <div class="modal-body">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>币种</th>
                        <th>额度</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="server in servers">
                        <td ng-bind="server.CurrencyCN"></td>
                        <td ng-bind="server.Amount"></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </script>
</div>