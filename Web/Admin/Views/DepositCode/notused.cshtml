@{     
    Layout = null;
}
@using DotPay.Web.Admin;
<div class="panel panel-default">
    <div class="panel-heading">
        <h4 class="panel-title">未使用的{{title}}&nbsp;<label ng-repeat="money in moneys"><h4>可用{{money.CurrencyCN}}剩余:{{money.Amount}}</h4></label></h4>
        
    </div>
    <div class="panel-body">
        <div class="pull-left">
            <button type="button" class="btn btn-success" ng-click="generate()">充值码生成</button>
            <button type="button" class="btn btn-success" ng-click="destory()">充值码销毁</button>
            <button type="button" class="btn btn-success" ng-click="makeFunds()">充值码标记</button>
        </div>
        <div class="pull-right padding-right100">
            <label>开始时间:</label><input type="text" class="form-control inline-control " ng-model="start_Search" onclick="WdatePicker()" onchange="">
            <label>结束时间:</label><input type="text" class="form-control inline-control " ng-model="end_Search" onclick="WdatePicker()" onchange="">
            <button type="button" class="btn btn-success" ng-click="search()"><span class="glyphicon glyphicon-search"></span>搜索</button>
        </div>
    </div>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>ID</th>
                <th>创建者ID</th>
                <th>金额</th>
                <th>Code</th>
                <th>Password</th>
                <th>是否锁定</th>
                <th>创建时间</th>
                <th>银行账户</th>
                <th>帐单号</th>
                <th>转账金额</th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="depositCode in depositCodes">
                <td><input type="checkbox" ng-model="depositCode.Checked" ng-change="checkedChange(depositCode)"></td>
                <td ng-bind="depositCode.ID"></td>
                <td ng-bind="depositCode.CreateBy"></td>
                <td ng-bind="depositCode.Amount"></td>
                <td ng-bind="depositCode.Code"></td>
                <td ng-bind="depositCode.Password"></td>
                <td ng-bind="depositCode.IsLocked?'是':'否'"></td>
                <td ng-bind="depositCode.CreateAt*1000 | date:'yyyy-MM-dd HH:mm:ss'"></td>
                <td ng-bind="depositCode.BankAccount"></td>
                <td ng-bind="depositCode.TransferTxNo"></td>
                <td ng-bind="depositCode.FundSourceAmount"></td>
            </tr>
        </tbody>
    </table>
    <pagination total-items="totalCount" page="currentPage" first-text="首页" on-select-page="pageChange(page)" next-text="下一页" previous-text="上一页" last-text="尾页" max-size="10" class="pagination-sm" boundary-links="true" rotate="false" num-pages="numPages"></pagination>
    <pre>共{{totalCount}}条数据  第{{currentPage}}页 /共{{numPages}}页</pre>
</div>

<div>
    <script type="text/ng-template" id="GenerateDepositCode.html">
        <div class="modal-header">
            <h3>生成充值码</h3>
        </div>
        <div class="modal-body">
            <form name="GenerateDepositCode" role="form">
                <table class="table-condensed" style="width: 95%">                    
                    <tr>
                        <td><label>生成金额</label>
                        <td><input type="text" ng-trim="true" class="form-control" required ng-model="amount"></td>
                    </tr>
                    <tr>
                        <td><label>资金密码</label>
                        <td><input type="password" ng-trim="true" class="form-control" required ng-model="password"></td>
                    </tr>
                </table>
                <div class="modal-footer">
                    <button class="btn btn-warning" ng-click="cancel()">取消</button>
                    <button class="btn btn-primary" ng-click="save(amount,password)">保存</button>
                </div>
            </form>
        </div>
    </script>
    <script type="text/ng-template" id="MakeFundsDepositCode.html">
        <div class="modal-header">
            <h3>标记资金来源</h3>
        </div>
        <div class="modal-body">
            <form name="MakeFundsDepositCode" role="form">
                <table class="table-condensed" style="width: 95%">
                    <tr>
                        <td><label>资金账号</label>
                        <td>
                            <select class="form-control" ng-model="CapitalAccountID" ng-options="c.BankAccount +'   '+ c.CNBank +'   '+c.OwnerName for c in getCapitalAccounts"></select>
                        </td>
                    </tr>
                    <tr>
                        <td><label>订单流水号</label>
                        <td><input type="text" ng-trim="true" class="form-control" required ng-model="TransferTxNo"></td>
                    </tr>
                    <tr>
                        <td><label>入账资金</label>
                        <td><input type="text" ng-trim="true" class="form-control" required ng-model="FundSourceAmount"></td>
                    </tr>
                </table>
                <div class="modal-footer">
                    <button class="btn btn-warning" ng-click="cancel()">取消</button>
                    <button class="btn btn-primary" ng-click="makeFunds(CapitalAccountID,TransferTxNo,FundSourceAmount)">保存</button>
                </div>
            </form>
        </div>
    </script>

</div>
