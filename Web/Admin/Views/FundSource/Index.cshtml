@{     
    Layout = null;
}
@using DotPay.Web.Admin;
<div class="panel panel-default">
    <div class="panel-heading">
        <h4 class="panel-title" ng-bind="title"></h4>
    </div>
    <div class="panel-body">
        <div class="pull-left">
            <button type="button" class="btn btn-primary" ng-click="openAddModal()">添加</button> 
            <button type="button" class="btn btn-success" ng-click="delete()">删除</button>
        </div>
        <div class="pull-right padding-right100">            
            <label>银行流水号:</label><input type="text" class="form-control inline-control " ng-model="transfer_Search">
            <label>充值金额:</label><input type="text" class="form-control inline-control " ng-model="amount_Search">
            <button type="button" class="btn btn-success" ng-click="search()"><span class="glyphicon glyphicon-search"></span>搜索</button>
        </div>
    </div>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>ID</th>
                <th>转帐银行</th>
                <th>转帐卡号</th>
                <th>转入银行</th>
                <th>转入金额</th>
                <th>转入备注</th>
                <th>创建时间</th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="fundSource in fundSources">
                <td><input type="checkbox" ng-model="fundSource.Checked" ng-change="checkedChange(fundSource)"></td>
                <td ng-bind="fundSource.ID"></td>
                <td ng-bind="fundSource.CNBank"></td>
                <td ng-bind="fundSource.TransferTxNo"></td>
                <td ng-bind="fundSource.BankAccount"></td>
                <td ng-bind="fundSource.Amount"></td>
                <td ng-bind="fundSource.Extra"></td>
                <td ng-bind="fundSource.CreateAt*1000 | date:'yyyy-MM-dd HH:mm:ss'"></td>
            </tr>
        </tbody>
    </table>
    <pagination total-items="totalCount" page="currentPage" first-text="首页" on-select-page="pageChange(page)" next-text="下一页" previous-text="上一页" last-text="尾页" max-size="10" class="pagination-sm" boundary-links="true" rotate="false" num-pages="numPages"></pagination>
    <pre>共{{totalCount}}条数据  第{{currentPage}}页 /共{{numPages}}页</pre>
</div>

<div>
    <script type="text/ng-template" id="addfundSourceModalContent.html">
     <div class="modal-header">
        <h3>添加银行到款</h3>
    </div>
    <div class="modal-body">
        <form name="fundSourceForm" role="form">
            <table class="table-condensed" style="width: 95%">
                <tr>
                    <td><label>转账银行</label></td>
                    <td>
                        <select class="form-control" ng-model="fundSourceType" ng-options="c.Key for c in fundSourceTypes"></select>
                    </td>
                </tr>
                <tr>
                    <td><label>交易号</label>
                    <td><input type="text" ng-trim="true" class="form-control" required ng-model="fundSource.transferTxNo"></td>
                </tr>
                <tr>
                    <td><label>收款账号</label>
                    <td>
                         <select class="form-control" ng-model="bankAccountType" ng-options="c.OwnerName+' '+c.BankAccount+' '+c.CNBank for c in bankAccount"></select>
                    </td>
                </tr>
                <tr>
                    <td><label>收款金额</label>
                    <td><input type="text" ng-trim="true" class="form-control" required ng-model="fundSource.amount"></td>
                </tr>
                <tr>
                    <td><label>用户备注</label>
                    <td><input type="text" ng-trim="true" class="form-control" required ng-model="fundSource.extra"></td>
                </tr>
               
            </table>
            <div class="modal-footer">
                <button class="btn btn-warning" ng-click="cancel()">取消</button>
                <button class="btn btn-primary" ng-click="add(fundSource,fundSourceType,bankAccountType)">保存</button>
            </div>
         </form>
    </div>
    </script>
</div>

