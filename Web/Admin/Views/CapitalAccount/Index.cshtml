@{     
    Layout = null;
}
@using DotPay.Web.Admin;
<div class="panel panel-default">
    <div class="panel-heading">
        <h4 class="panel-title" ng-bind="title"></h4>
    </div>
    <div class="panel-body">
        <div class="pull-left">
            <button type="button" class="btn btn-primary" ng-click="openAddModal()"><span class="glyphicon glyphicon-ban-plus"></span>添加</button>
            <button type="button" class="btn btn-danger" ng-click="disable()"><span class="glyphicon glyphicon-ban-circle"></span>禁用</button>
            <button type="button" class="btn btn-success" ng-click="enable()"><span class="glyphicon glyphicon-ok-circle"></span>启用</button>
        </div>
        <div class="pull-right padding-right100">            
            <label>开户人:</label><input type="text" class="form-control inline-control " ng-model="name_Search">
            <button type="button" class="btn btn-success" ng-click="search()"><span class="glyphicon glyphicon-search"></span>搜索</button>
        </div>
    </div>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>ID</th>
                <th>银行名称</th>
                <th>开户人</th>
                <th>银行号码</th>
                <th>创建时间</th>
                <th>创建人</th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="capitalAccount in capitalAccounts">
                <td><input type="checkbox" ng-model="capitalAccount.Checked" ng-change="checkedChange(capitalAccount)"></td>
                <td><span ng-class="{'glyphicon glyphicon-ban-circle':!capitalAccount.IsEnable}"></span><span ng-bind="capitalAccount.ID"></span></td>
                <td ng-bind="capitalAccount.CNBank"></td>
                <td ng-bind="capitalAccount.OwnerName"></td>
                <td ng-bind="capitalAccount.BankAccount"></td>
                <td ng-bind="capitalAccount.CreateAt"></td>
                <td ng-bind="capitalAccount.CreateBy"></td>
            </tr>
        </tbody>
    </table>
    <pagination total-items="totalCount" page="currentPage" first-text="首页" on-select-page="pageChange(page)" next-text="下一页" previous-text="上一页" last-text="尾页" max-size="10" class="pagination-sm" boundary-links="true" rotate="false" num-pages="numPages"></pagination>
    <pre>共{{totalCount}}条数据  第{{currentPage}}页 /共{{numPages}}页</pre>
</div>

<div>
    <script type="text/ng-template" id="addcapitalAccountModalContent.html">
     <div class="modal-header">
        <h3>添加银行卡</h3>
    </div>
    <div class="modal-body">
        <form name="capitalAccountForm" role="form">
            <table class="table-condensed" style="width: 95%">
                <tr>
                    <td><label>银行代码</label></td>
                    <td>
                        <select class="form-control" ng-model="capitalAccountType" ng-options="c.Key for c in capitalAccountTypes"></select>
                    </td>
                </tr>
                <tr>
                    <td><label>开户人</label>
                    <td><input type="text" ng-trim="true" class="form-control" required ng-model="capitalAccount.OwnerName"></td>
                </tr>
                <tr>
                    <td><label>银行卡号</label>
                    <td><input type="text" ng-trim="true" class="form-control" required ng-model="capitalAccount.BankAccount"></td>
                </tr>
               
            </table>
            <div class="modal-footer">
                <button class="btn btn-warning" ng-click="cancel()">取消</button>
                <button class="btn btn-primary" ng-click="add(capitalAccount,capitalAccountType)">保存</button>
            </div>
         </form>
    </div>
    </script>
</div>

