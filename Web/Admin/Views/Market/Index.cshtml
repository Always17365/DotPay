@{
    Layout = null;
}
@using DotPay.Web.Admin;
<div class="panel panel-default">
    <div class="panel-heading">
        <h4 class="panel-title" ng-bind="title"></h4>
    </div>
    <div class="panel-body">
        <div class="pull-left">
            <button type="button" class="btn btn-success" ng-click="openSetModal()">交易引擎设置</button>
        </div>
    </div>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>ID</th>
                <th>名称</th>
                <th>交易费率</th>
                @*<th>负载指数</th>*@
                <th>交易引擎</th>
                <th>最后更新时间</th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="market in markets">
                <td><input type="checkbox" ng-model="market.Checked" ng-change="checkedChange(market)"></td>
                <td>
                    <span ng-bind="market.ID"></span><span ng-class="{'glyphicon glyphicon-ban-circle':!market.IsOpen}"></span>
                    <button type="button" class="btn btn-xs" ng-class="{true:'btn-danger',false:'btn-success'}[market.IsOpen]" ng-click="market.IsOpen==true?closeMarket(market.ID):openMarket(market.ID)"><span class="glyphicon" ng-class="{true:'glyphicon-ban-circle',false:'glyphicon glyphicon-ok-sign'}[market.IsOpen]"></span> {{market.IsOpen?'关闭':'开启'}} </button>
                </td>
                <td ng-bind="market.Name"></td>
                <td ng-bind="market.FeeRate*100+'%'"></td> 
                @*<td ng-bind="market.EngineBalance"></td>*@
                <td>@*<span ng-bind="market.TradeEngineCount"></span><span class='pull-right label label-success' ng-class="{'label-danger':market.TradeEngineCount!=market.RuningCount}">*@ <span ng-bind="market.RuningCount" style="padding-right:5px"></span>运行中</td>
                <td ng-bind="market.UpdateAt*1000 + 28800000 | date:'yyyy-MM-dd'"></td> 
            </tr>
        </tbody>
    </table>
    <pagination total-items="totalCount" page="currentPage" first-text="首页" on-select-page="pageChange(page)" next-text="下一页" previous-text="上一页" last-text="尾页" max-size="10" class="pagination-sm" boundary-links="true" rotate="false" num-pages="numPages"></pagination>
    <pre>共{{totalCount}}条数据  第{{currentPage}}页 /共{{numPages}}页</pre>
</div>

