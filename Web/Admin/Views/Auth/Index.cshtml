@{
    Layout = null;
}

<!DOCTYPE html>

<html class="lockscreen" ng-app="authApp">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>登录</title>
    @Styles.Render("~/Content/authcss")
    @Styles.Render("~/Content/bootstrapcss")
</head>
<body class="lockscreen fixed">
    <div id="lockscreen" ng-controller="AuthCtrl">
        <table id="center" style="width: 100%; height: 100%;">
            <tbody>
                <tr>
                    <td style="text-align: center; vertical-align: middle; padding-top: 100px">
                        <img src="../content/image/logo.png" style="width: 320px; height: 72px; margin-bottom: 40px; opacity: 0.8;">
                        <div id="login_panel" ng-show="!loginSuccess">
                            <div class="lockscreen-item">
                                <form class="form-inline" role="form">
                                    <div class="form-group has-success ">
                                        <label class="control-label"><span class="glyphicon glyphicon-user"></span></label>
                                        <input class="form-control" required ng-model="passport.account" placeholder="请输入登录账号" autofocus="">
                                    </div>
                                    <div class="form-group has-success ">
                                        <label class="control-label"><span class="glyphicon glyphicon-lock"></span></label>
                                        <input type="password" required class="form-control" ng-model="passport.password" placeholder="请输入登录密码">
                                    </div>
                                    <button type="button" class="btn btn-success" ng-click="login(passport)">
                                        登录
                                    </button>
                                </form>
                            </div>
                        </div>
                        <div id="twofactor_panel" ng-show="!!loginSuccess" class="ng-Cloak">
                            <div class="lockscreen-item">
                                <form class="form-inline" role="form">
                                    <div class="form-group has-success" ng-show="!!openGA" ng-cloak>
                                        <label class="control-label"><span class="icon-ga"></span></label>
                                        <input class="form-control" ng-model="twofactor.ga" placeholder="请输入谷歌身份验证码">
                                    </div>
                                    <div class="form-group has-success" ng-show="!!openSMS" ng-cloak>
                                        <label class="control-label"><span class="icon-sms"></span></label>
                                        <input type="password" class="form-control" ng-model="twofactor.sms" placeholder="请输入短信验证码">
                                    </div>
                                    <button type="button" class="btn btn-success" ng-click="verifyTwoFactor(twofactor)">
                                        确定
                                    </button>
                                </form>
                            </div>
                            <div style="font: bolder 14px  宋体; color: gray; padding: 10px 10px 30px 10px;">请输入双重身份验证码</div>
                        </div>
                        <div style="text-align: center">
                            <div class="col-sm-4 col-sm-offset-4" alert-box></div>
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/angular-animate")
    @Scripts.Render("~/bundles/angular-route")
    @Scripts.Render("~/bundles/angular-alerts")
    @Scripts.Render("~/bundles/authctrl")
</body>
</html>
