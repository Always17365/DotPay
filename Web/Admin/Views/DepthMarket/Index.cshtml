@{
    Layout = null;
}
@using DotPay.Web.Admin;
<div class="panel panel-default">
    <div class="panel-heading">
        <h4 class="panel-title" ng-bind="title"></h4>
    </div>
    <div class="panel-body">
        <div class="pull-left">
           
        </div>
    </div>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>用户ID</th>
                <th>交易币种</th>
                <th>交易市场</th>
                <th>剩余量</th>
                <th>挂单量</th>
                <th>单价</th>
                <th>创建时间</th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="depthMarket in depthMarkets">               
                <td ng-bind="depthMarket.ID"></td>
                <td ng-bind="depthMarket.UserID"></td>
                <td ng-bind="depthMarket.TargetCurrency"></td>
                <td ng-bind="depthMarket.BaseCurrency"></td>
                <td ng-bind="depthMarket.Volume"></td>
                <td ng-bind="depthMarket.OriginVolume"></td>
                <td ng-bind="depthMarket.Price.toString()"></td>
                <td ng-bind="depthMarket.CreateAt*1000  | date:'yyyy-MM-dd HH:mm:ss'"></td>
            </tr>
        </tbody>
    </table>
    <pagination total-items="totalCount" page="currentPage" first-text="首页" on-select-page="pageChange(page)" next-text="下一页" previous-text="上一页" last-text="尾页" max-size="10" class="pagination-sm" boundary-links="true" rotate="false" num-pages="numPages"></pagination>
    <pre>共{{totalCount}}条数据  第{{currentPage}}页 /共{{numPages}}页</pre>
</div>