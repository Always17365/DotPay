                    <tr>
                        <td><label>虚拟币最低确认次数</label>
                        <td><input type="text" ng-trim="true" class="form-control" required ng-model="currency.num"></td>
                    </tr>
                </table>
                <div class="modal-footer">
                    <button class="btn btn-warning" ng-click="cancel()">取消</button>
                    <button class="btn btn-primary" ng-click="change(currency)">保存</button>
                </div>
            </form>
        </div>
    </script>
</div>

