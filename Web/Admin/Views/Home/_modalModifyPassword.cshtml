@model DotPay.ViewModel.ModifyPasswordModel
@using DotPay.Language
@using DotPay.Common
<div>
    <div class="modal-header">
        <h3>修改密码</h3>
    </div>
    <div class="modal-body">
        <form role="form">
            <div class="form-group">
                <label>@Html.Lang(LangKey.ViewModel.User.ModifyPasswordModel.OLD_PASSWORD)</label>
                @Html.TextBoxFor(m => m.OldPassword, new Dictionary<string, object>() { { "class", "form-control" }, { "ng-model", "oldPassword" } })
            </div>  
            <div class="form-group">
                <label>@Html.Lang(LangKey.ViewModel.User.ModifyPasswordModel.NEW_PASSWORD)</label>
                @Html.TextBoxFor(m => m.NewPassword, new Dictionary<string, object>() { { "class", "form-control" }, { "ng-model", "newPassword" } })
            </div>
            <div class="form-group">
                <label for="exampleInputFile">@Html.Lang(LangKey.ViewModel.User.ModifyPasswordModel.CONFIRM_NEW_PASSWORD)</label>
                @Html.TextBoxFor(m => m.ConfirmPassword, new Dictionary<string, object>() { { "class", "form-control" }, { "ng-model", "confirmPassword" } })
            </div>
            @if (ViewBag.User.IsOpenGA)
            {
                <div class="form-group">
                    <label><span>@Html.Lang(LangKey.ViewModel.User.ModifyPasswordModel.GA_OTP)</span></label>
                    @Html.TextBoxFor(m => m.GAPassword, new Dictionary<string, object>() { { "class", "form-control" }, { "ng-model", "gaPassword" } })
                </div>
            }
            @if (ViewBag.User.IsOpenGA)
            {
                <div class="form-group">
                    <label>@Html.Lang(LangKey.ViewModel.User.ModifyPasswordModel.SMS_OTP)</label>
                    @Html.TextBoxFor(m => m.SMSPassword, new Dictionary<string, object>() { { "class", "form-control" }, { "ng-model", "smsPassword" } })
                </div>
            }
        </form>
    </div>
    <div class="modal-footer">
        <button class="btn btn-warning" ng-click="cancel()">取消</button>
        <button class="btn btn-primary" ng-click="save()">保存</button>
    </div>
</div>
