@model DotPay.ViewModel.ModifyPasswordModel
@using DotPay.Language
@using DotPay.Common
<div>
    <div class="modal-header">
        <h3>修改密码</h3>
    </div>
    <div class="modal-body">
        <form role="form">
            <div class="form-group">
                <label>旧密码</label>
                @Html.TextBoxFor(m => m.OldPassword, new Dictionary<string, object>() { { "class", "form-control" }, { "ng-model", "oldPassword" } })
            </div>
            <div class="form-group">
                <label>新密码</label>
                @Html.TextBoxFor(m => m.NewPassword, new Dictionary<string, object>() { { "class", "form-control" }, { "ng-model", "newPassword" } })
            </div>
            <div class="form-group">
                <label for="exampleInputFile">重复新密码</label>
                @Html.TextBoxFor(m => m.ConfirmPassword, new Dictionary<string, object>() { { "class", "form-control" }, { "ng-model", "confirmPassword" } })
            </div>           
        </form>
    </div>
    <div class="modal-footer">
        <button class="btn btn-warning" ng-click="cancel()">取消</button>
        <button class="btn btn-primary" ng-click="save(oldPassword,newPassword,confirmPassword)">保存</button>
    </div>
</div>