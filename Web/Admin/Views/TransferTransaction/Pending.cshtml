@{
    Layout = null;
}
@using DotPay.Web.Admin;
<div class="panel panel-default">
    <div class="panel-heading">
        <h4 class="panel-title" ng-bind="title"></h4>
    </div>
    <div class="panel-body">
        <div class="pull-left">
            <button type="button" class="btn btn-danger" ng-click="Processing()">锁定</button>
            <button type="button" class="btn btn-success" ng-click="Success()">完成</button>
            <button type="button" class="btn btn-success" ng-click="Fail()">失败</button>
        </div>

        <div class="pull-right padding-right100">
        </div>
    </div>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>ID</th>
                <th>TxId</th>
                <th>流水号</th>
                <th>支付来源</th>
                <th>状态</th>
                <th>支付方式</th>
                <th>{{title}}账户</th>
                <th>姓名</th>
                <th>金额</th>
                <th>备注</th>
                <th>创建时间</th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="tx in transferTransactions">
                <td><input type="checkbox" ng-model="tx.Checked" ng-change="checkedChange(tx)"></td>
                <td ng-bind="tx.ID"></td>
                <td ng-bind="tx.TxId"></td>
                <td ng-bind="tx.TransferNo"></td>
                <td ng-bind="tx.CNSourcePayway"></td>
                <td ng-bind="tx.CNState+'-'+tx.OperatorName"></td>
                <td ng-bind="tx.CNPayWay"></td>
                <td ng-bind="tx.Account"></td>
                <td ng-bind="tx.RealName"></td>
                <td ng-bind="tx.Amount"></td>
                <td ng-bind="tx.Memo + tx.Reason"></td>
                <td ng-bind="tx.CreateAt*1000 | date:'yyyy-MM-dd HH:mm:ss'"></td>
            </tr>
        </tbody>
    </table>
    <pagination total-items="totalCount" page="currentPage" first-text="首页" on-select-page="pageChange(page)" next-text="下一页" previous-text="上一页" last-text="尾页" max-size="10" class="pagination-sm" boundary-links="true" rotate="false" num-pages="numPages"></pagination>
    <pre>共{{totalCount}}条数据  第{{currentPage}}页 /共{{numPages}}页</pre>
</div>
<div>
    <script type="text/ng-template" id="successTransferTransaction.html">
        <div class="modal-header">
            <h3></h3>
        </div>
        <div class="modal-body">
            <form name="transferTransactionForm" role="form">
                <table class="table-condensed" style="width: 95%">
                    <tr>
                        <td><label>转账交易号</label></td>
                        <td><input type="text" ng-trim="true" class="form-control" required ng-model="successTransferTransaction.TransferNo"></td>
                    </tr>
                    <tr>
                        <td><label>转账金额</label></td>
                        <td><input type="text" ng-trim="true" class="form-control" required ng-model="successTransferTransaction.Amount"></td>
                    </tr>
                </table>
                <div class="modal-footer">
                    <button class="btn btn-warning" ng-click="cancel()">取消</button>
                    <button class="btn btn-primary" ng-click="set(successTransferTransaction)">保存</button>
                </div>
            </form>
        </div>
    </script>
</div>
<div>
    <script type="text/ng-template" id="failTransferTransaction.html">
        <div class="modal-header">
            <h3></h3>
        </div>
        <div class="modal-body">
            <form name="transferTransactionForm" role="form">
                <table class="table-condensed" style="width: 95%">
                    <tr>
                        <td><label>输入失败原因</label></td>
                        <td><input type="text" ng-trim="true" class="form-control" required ng-model="text"></td>
                    </tr>
                </table>
                <div class="modal-footer">
                    <button class="btn btn-warning" ng-click="cancel()">取消</button>
                    <button class="btn btn-primary" ng-click="set(text)">保存</button>
                </div>
            </form>
        </div>
    </script>
</div>
