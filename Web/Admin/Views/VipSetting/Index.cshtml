@{     
    Layout = null;
}
@using DotPay.Web.Admin;
<div class="panel panel-default">
    <div class="panel-heading">
        <h4 class="panel-title" ng-bind="title"></h4>
    </div>
    <div class="panel-body">
        <div class="pull-left">
            <button type="button" class="btn btn-success" ng-click="setVipLevel('Discount')">设置折扣</button>
            <button type="button" class="btn btn-success" ng-click="setVipLevel('ScoreLine')">设置分数线</button>
            <button type="button" class="btn btn-success" ng-click="setVipLevel('VoteCount')">设置投票数</button>
        </div>
        <div class="pull-right padding-right100">   
        </div>
    </div>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>ID</th>
                <th>VIP等级</th>
                <th>积分线</th>
                <th>折扣</th>
                <th>票数</th>
                <th>创建时间</th>
                <th>修改时间</th> 
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="vipsetting in vipsettings">
                <td><input type="checkbox" ng-model="vipsetting.Checked" ng-change="checkedChange(vipsetting)"></td>
                <td ng-bind="vipsetting.ID"></td>
                <td ng-bind="vipsetting.VipLevel"></td>
                <td ng-bind="vipsetting.ScoreLine"></td>
                <td ng-bind="vipsetting.Discount"></td>
                <td ng-bind="vipsetting.VoteCount"></td>         
                <td ng-bind="vipsetting.CreateAt*1000 | date:'yyyy-MM-dd HH:mm:ss'"></td>
                <td ng-bind="vipsetting.UpdateAt*1000 | date:'yyyy-MM-dd HH:mm:ss'"></td>
            </tr>
        </tbody>
    </table>
    <pagination total-items="totalCount" page="currentPage" first-text="首页" on-select-page="pageChange(page)" next-text="下一页" previous-text="上一页" last-text="尾页" max-size="10" class="pagination-sm" boundary-links="true" rotate="false" num-pages="numPages"></pagination>
    <pre>共{{totalCount}}条数据  第{{currentPage}}页 /共{{numPages}}页</pre>
</div>

<div>
    <script type="text/ng-template" id="vipSettingModalContent.html">
        <div class="modal-header">
            <h3 ng-bind="title"></h3>
        </div>
        <div class="modal-body">
            <form name="vipsettingForm" role="form">
                <table class="table-condensed" style="width: 95%">
                    <tr>
                        <td><label>vipLevelId</label></td>
                        <td><input type="text" ng-trim="true" class="form-control" required ng-model="selectVipSetting.ID"></td>
                    </tr>
                    <tr>
                        <td><label>{{title}}</label></td>
                        <td><input type="text" ng-trim="true" class="form-control" required ng-model="value"></td>
                    </tr>
                </table>
                <div class="modal-footer">
                    <button class="btn btn-warning" ng-click="cancel()">取消</button>
                    <button class="btn btn-primary" ng-click="set(value)">保存</button>
                </div>
            </form>
        </div>
    </script>
</div>

