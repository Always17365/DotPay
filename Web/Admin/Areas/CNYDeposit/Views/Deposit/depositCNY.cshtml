@{
    Layout = null;
}
<div class="panel panel-default">
    <div class="panel-heading">
        <h4 class="panel-title" ng-bind="title"></h4>
    </div>
    <div class="panel-body">
        <div class="pull-left">
            <!--<button type="button" class="btn btn-success" ng-click="undo()">撤销</button>-->
        </div>
        <div class="pull-right padding-right100">
            <label>充值金额:</label><input type="text" class="form-control inline-control " ng-model="amount_search">
            <label>Email:</label><input type="text" class="form-control inline-control " ng-model="email_search">
            <button type="button" class="btn btn-success" ng-click="search()"><span class="glyphicon glyphicon-search"></span>搜索</button>
        </div>
    </div>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>ID</th>
                <th>Email</th>
                <th>充值金额</th>
                <th>充值状态</th>
                <th>订单时间</th>
                <th>打款备注</th>
            </tr>
        </thead>
        <tbody ng-show="deposits"> 
            <tr ng-repeat="deposit in deposits">
                <td><input type="checkbox" ng-model="deposit.Checked" ng-change="checkedChange(deposit)"></td>
                <td><span ng-bind="deposit.ID"></span></td>
                <td ng-bind="deposit.Email"></td>
                <td ng-bind="deposit.Amount"></td>
                <td ng-bind="deposit.CNState"></td>                
                <td ng-bind="deposit.CreateAt*1000 | date:'yyyy-MM-dd HH:mm:ss'"></td>
                <td ng-bind="deposit.Memo"></td>
            </tr>
        </tbody>
    </table>
    <pagination total-items="totalCount" page="currentPage" first-text="首页" on-select-page="pageChange(page)" next-text="下一页" previous-text="上一页" last-text="尾页" max-size="10" class="pagination-sm" boundary-links="true" rotate="false" num-pages="numPages"></pagination>
    <pre>共{{totalCount}}条数据  第{{currentPage}}页 /共{{numPages}}页</pre>
</div>
