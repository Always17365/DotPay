
<div class="panel panel-default">
    <div class="panel-heading">
        <h4 class="panel-title">&nbsp;{{currencyType}}&nbsp;充值列表</h4>
    </div>
    <div class="panel-body">
        <div class="pull-left">
            <button type="button" class="btn btn-success" ng-click="entry()">登记充值</button>
        </div>
    </div>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>ID</th>
                <th>用户ID</th>
                <th>金额</th>
                <th>充值地址</th>
                <th>TxID</th>
                <th>订单时间</th>
                <th>备注</th>
            </tr>
        </thead>
        <tbody ng-show="deposits"> 
            <tr ng-repeat="deposit in deposits">
                <td><input type="checkbox" ng-model="deposit.Checked" ng-change="checkedChange(deposit)"></td>
                <td><span ng-bind="deposit.ID"></span></td>
                <td ng-bind="deposit.UserID"></td>
                <td ng-bind="deposit.Amount"></td>
                <td ng-bind="deposit.Address"></td>                
                <td ng-bind="deposit.TxID"></td>                  
                <td ng-bind="deposit.CreateAt*1000 | date:'yyyy-MM-dd HH:mm:ss'"></td>
                <td ng-bind="deposit.Memo"></td>
            </tr>
        </tbody>
    </table>
    <pagination total-items="totalCount" page="currentPage" first-text="首页" on-select-page="pageChange(page)" next-text="下一页" previous-text="上一页" last-text="尾页" max-size="10" class="pagination-sm" boundary-links="true" rotate="false" num-pages="numPages"></pagination>
    <pre>共{{totalCount}}条数据  第{{currentPage}}页 /共{{numPages}}页</pre>
</div>
<div>
    <script type="text/ng-template" id="receivePayMentTransaction.html">
        <div class="modal-header">
            <h3 ng-bind="title"></h3>
        </div>
        <div class="modal-body">
            <form name="lockForm" role="form">  
                <table class="table-condensed" style="width: 95%">
                <tr>
                    <td><label>订单id</label></td>
                    <td><input type="text" ng-trim="true" class="form-control" required ng-model="selectDeposit.ID" disabled="disabled"></td>
                </tr>
                <tr>
                    <td><label>TxID</label>
                    <td><input type="text" ng-trim="true" class="form-control" required ng-model="txid"></td>
                </tr>
                <tr>
                    <td><label>金额</label>
                    <td><input type="text" ng-trim="true" class="form-control" required ng-model="amount"></td>
                </tr>
               
            </table>
                <div class="modal-footer">
                    <button class="btn btn-warning" ng-click="cancel()">取消</button>
                    <button class="btn btn-primary" ng-click="save(txid,amount)">保存</button>
                </div>
            </form>
        </div>
    </script>
</div>