@{     
    Layout = null;
}
@using DotPay.Web.Admin;
<div class="panel panel-default">
    <div class="panel-heading">
        <h4 class="panel-title">{{currencyType+' '+title}}提现记录</h4>
    </div>
    <div class="panel-body">
        <div class="pull-left">            
             <!--<button type="button" class="btn btn-primary" ng-click="success()">完成</button> -->
            <button type="button" class="btn btn-primary" ng-click="rescind()">撤销</button>
        </div>
        <div class="pull-right padding-right100">
            <label>用户ID:</label><input type="text" class="form-control inline-control " ng-model="UserID_Search">
            <button type="button" class="btn btn-success" ng-click="search()"><span class="glyphicon glyphicon-search"></span>搜索</button>
        </div>
    </div>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>ID</th>
                <th>用户ID</th>
                <th>用户Email</th>
                <th>提现地址</th>   
                <th>TxID</th>      
                <th>金额</th>
                <th>费用</th>
                <th>创建时间</th>
                <th>备注</th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="withdraw in withdraws">
                <td><input type="checkbox" ng-model="withdraw.Checked" ng-change="checkedChange(withdraw)"></td>
                <td ng-bind="withdraw.ID"></td>
                <td ng-bind="withdraw.UserID"></td>
                <td ng-bind="withdraw.Email"></td>
                <td ng-bind="withdraw.ReceiveAddress"></td>
                <td ng-bind="withdraw.TxID"></td>
                <td ng-bind="withdraw.Amount"></td>
                <td ng-bind="withdraw.TxFee"></td>
                <td ng-bind="withdraw.CreateAt*1000 | date:'yyyy-MM-dd HH:mm:ss'"></td>
                <td ng-bind="withdraw.Memo"></td>
            </tr>
        </tbody>
    </table>
    <pagination total-items="totalCount" page="currentPage" first-text="首页" on-select-page="pageChange(page)" next-text="下一页" previous-text="上一页" last-text="尾页" max-size="10" class="pagination-sm" boundary-links="true" rotate="false" num-pages="numPages"></pagination>
    <pre>共{{totalCount}}条数据  第{{currentPage}}页 /共{{numPages}}页</pre>
</div>
<div>
    <script type="text/ng-template" id="verifyModalContent.html">
        <div class="modal-header">
            <h3 ng-bind="title"></h3>
        </div>
        <div class="modal-body">
            <form name="lockForm" role="form">
                <div class="form-group">
                    <label>原因</label>
                    <textarea rows="3" ng-trim="true" class="form-control" required ng-model="reason"></textarea>
                    <input type="hidden" ng-init="hidden='nxt'" />
                </div>
                <div class="modal-footer">
                    <button class="btn btn-warning" ng-click="cancel()">取消</button>
                    <button class="btn btn-primary" ng-click="save(reason,hidden)">保存</button>
                </div>
            </form>
        </div>
    </script>
    <script type="text/ng-template" id="cancelVirtualCoinWithdraw.html">
        <div class="modal-header">
            <h3 ng-bind="title"></h3>
        </div>
        <div class="modal-body">
            <form name="lockForm" role="form">
                <div class="form-group">
                    <label>原因</label>
                    <textarea rows="3" ng-trim="true" class="form-control" required ng-model="reason"></textarea>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-warning" ng-click="cancel()">取消</button>
                    <button class="btn btn-primary" ng-click="save(reason)">保存</button>
                </div>
            </form>
        </div>
    </script>
    <script type="text/ng-template" id="successModalContent.html">
        <div class="modal-header">
            <h3 ng-bind="title"></h3>
        </div>
        <div class="modal-body">
            <form name="fundSourceForm" role="form">
                <table class="table-condensed" style="width: 95%">
                    <tr>
                        <td><label>ID</label>
                        <td><input type="text" ng-trim="true" class="form-control" required ng-model="selectWithdraw.ID" disabled></td>
                    </tr>
                    <tr>
                        <td><label>转出账号</label>
                        <td>
                            <select class="form-control" ng-model="bankAccountType" ng-options="c.OwnerName+' '+c.BankAccount+' '+c.CNBank for c in bankAccount"></select>
                        </td>
                    </tr>
                    <tr>
                        <td><label>流水单号</label>
                        <td><input type="text" ng-trim="true" class="form-control" required ng-model="transferNo"></td>
                    </tr>
                </table>
                <div class="modal-footer">
                    <button class="btn btn-warning" ng-click="cancel()">取消</button>
                    <button class="btn btn-primary" ng-click="save(transferNo,bankAccountType.ID)">保存</button>
                </div>
            </form>
        </div>
    </script>
    <script type="text/ng-template" id="CompleteVirtualCoinWithdraw.html">
        <div class="modal-header">
            <h3 ng-bind="title"></h3>
        </div>
        <div class="modal-body">
            <form name="fundSourceForm" role="form">
                <table class="table-condensed" style="width: 95%">
                    <tr>
                        <td><label>ID</label>
                        <td><input type="text" ng-trim="true" class="form-control" required ng-model="selectDeposit.UserID" disabled></td>
                    </tr>
                    <tr>
                        <td><label>txid</label>
                        <td><input type="text" ng-trim="true" class="form-control" required ng-model="txid"></td>
                    </tr>
                </table>
                <div class="modal-footer">
                    <button class="btn btn-warning" ng-click="cancel()">取消</button>
                    <button class="btn btn-primary" ng-click="save(txid)">保存</button>
                </div>
            </form>
        </div>
    </script>
</div>
